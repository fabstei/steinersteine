{% extends '::backend.html.twig' %}
{% block content %}
<div class="row-fluid">
    <div class="span9 offset2">

        <h1>Gruppe list</h1>

        <table class="records_list">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('gruppe_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('gruppe_show', { 'id': entity.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('gruppe_edit', { 'id': entity.id }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <ul>
            <li>
                <a href="{{ path('gruppe_new') }}">
                    Create a new entry
                </a>
            </li>
        </ul>

    </div>
</div>
{% endblock %}